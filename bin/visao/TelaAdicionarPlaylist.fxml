<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="200.0" prefWidth="350.0" spacing="30.0" style="-fx-background-color: #14213D;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controle.TelaAdicionarPlaylistController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <Label text="Adicionar Playlist" textFill="#e5e5e5">
      <font>
         <Font name="Gadugi Bold" size="18.0" />
      </font>
   </Label>
    
    <TextField fx:id="nomePlaylist" maxWidth="-Infinity" prefHeight="40.0" prefWidth="260.0" promptText="Nome da Playlist" style="-fx-background-color: #14213D; -fx-border-color: white;" stylesheets="@login.css">
      <font>
         <Font size="13.0" />
      </font></TextField>
    <Button maxHeight="100.0" onAction="#adicionarPlaylistAcao" prefHeight="27.0" prefWidth="80.0" style="-fx-background-color: white; -fx-background-radius: 20;" text="Criar " textFill="#14213d">
      <font>
         <Font size="13.0" />
      </font></Button>
</VBox>
